<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemHeaderLayout"
    android:background="@color/pale_grey_blue">

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center|center_horizontal"
        android:paddingLeft="24dp"
        android:paddingTop="16dp"
        android:text="Sprite"
        fontPath="fonts/GothamRounded-Book.otf"
        android:textSize="16sp"
        android:textColor="@color/dark_grey_blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtHeaderTotalQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtProductName"
        android:paddingLeft="5dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp"
        android:alpha="0.5"
        android:text="QR 1.00 x 10"
        android:textSize="16sp"
        fontPath="fonts/GothamRounded-Book.otf"
        android:textColor="@color/dark_grey_blue"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtProductName"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnProductDiscountView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:background="@drawable/discountbutt_default"
        fontPath="fonts/GothamRounded-Bold.otf"
        android:layout_marginLeft="24dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txtProdcutDiscView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="24dp"
        android:paddingBottom="16dp"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"
        fontPath="fonts/GothamRounded-Bold.otf"
        android:text="- 50 %"
        android:textSize="32sp"
        android:textColor="@color/dark_grey_blue"
        android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>
